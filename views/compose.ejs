<%- include('partials/header') -%>
    
<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" autocomplete="off">
        <label for="postText">Post</label>
        <textarea name="postText" id="postText" cols="40" rows="5" class="form-control" autocomplete="off"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
      
</form>

<%- include('partials/footer') -%>

